#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
#if ($http == 'true')
    xmlns:mvc="http://www.springframework.org/schema/mvc"
#end
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
#if ($http == 'true')
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
#end
       ">

#if ($http == 'true')
    <mvc:annotation-driven/>
#end
    <context:annotation-config />
    <context:component-scan base-package="${package}" />
#if ($http == 'true')

    <bean id="moduleRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="moduleName" value="${artifactId}" />
        <constructor-arg name="url" value="../${artifactId}/resources/index.html" />
        <constructor-arg name="angularModules">
            <list>
                <value>${artifactId}HelloWorld</value>
            </list>
        </constructor-arg>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../${artifactId}/resources/messages/" />
            </map>
        </constructor-arg>
        <property name="defaultURL" value="/${artifactId}/helloWorld"/>
    </bean>
#end

#if ($settings == 'true')

    <bean id="bundleSettings" class="org.motechproject.config.SettingsFacade"
        autowire="byType">
        <property name="configFiles">
            <list>
                <value>classpath:${artifactId}.properties</value>
            </list>
        </property>
    </bean>
#end

</beans>
